<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    android:orientation="vertical" >

    <Button
        android:id="@+id/b_makerequest"
android:textColor="#E8E8E8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="22dp"
         android:background="@drawable/sample"
        android:text="Request for blood" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="49dp"
        android:layout_toLeftOf="@+id/bsearch"
        android:src="@drawable/acceptor" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="55dp"
        android:layout_toLeftOf="@+id/bsearch"
        android:src="@drawable/admin2" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="23dp"
        android:src="@drawable/unnamed" />

    <Button
        android:id="@+id/admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignRight="@+id/b_makerequest"
        android:layout_marginBottom="22dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/sample"
        android:text="Admin"
        android:textColor="#E8E8E8" />

    <Button
        android:id="@+id/donor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignLeft="@+id/b_makerequest"
        android:layout_marginLeft="15dp"
        android:background="@drawable/sample"
        android:text="Donor"
        android:textColor="#E8E8E8" />

</RelativeLayout>
