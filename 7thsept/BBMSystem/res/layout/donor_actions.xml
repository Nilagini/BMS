<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <Gallery
        android:id="@+id/gallery1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="132dp"
        android:layout_toRightOf="@+id/donor_signup" />

    <Gallery
        android:id="@+id/gallery2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/donor_update"
        android:layout_alignParentTop="true"
        android:layout_marginTop="133dp" />

    <Button
        android:id="@+id/view_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/donor_signup"
        android:layout_alignBottom="@+id/donor_signup"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:background="@drawable/sample"
        android:text="Show Donors"
        android:textColor="#E8E8E8"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/donor_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        android:background="@drawable/sample"
        android:text="Update donors"
        android:textColor="#E8E8E8"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="31dp"
        android:src="@drawable/donor3" />

    <Button
        android:id="@+id/donor_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/donor_update"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="25dp"
        android:background="@drawable/sample"
        android:text="Register"
        android:textColor="#E8E8E8"
        android:textSize="20dp"
        android:textStyle="bold" />

</RelativeLayout>